    <script>
        function submitForm() {
            const form = document.getElementById('userSignInForm');
            const formData = new FormData(form);
            const turnstileResponse = document.querySelector('[name="cf-turnstile-response"]').value;
            
            const data = {
                ...Object.fromEntries(formData.entries()),
                turnstileToken: turnstileResponse
            };

            fetch('/signin', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(data),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    localStorage.setItem('userName', data.userName);
                    localStorage.setItem('userEmail', data.userEmail);
                    localStorage.setItem('userPhone', data.userPhone);
                    window.location.href = data.redirect;
                } else {
                    document.getElementById('errorMessage').textContent = data.error || 'Invalid credentials';
                    turnstile.reset();
                }
            })
            .catch((error) => {
                console.error('Error:', error);
                document.getElementById('errorMessage').textContent = 'An error occurred during sign in';
                turnstile.reset();
            });
        }

        function toggleForgotPassword() {
            const signInForm = document.getElementById('userSignInForm');
            const forgotPasswordSection = document.getElementById('forgotPasswordSection');
            const forgotPasswordLink = document.getElementById('forgotPasswordLink');
            const signInEmail = document.querySelector('#userSignInForm input[name="email"]').value;
            
            if (forgotPasswordSection.style.display === 'none') {
                document.querySelector('#forgotPasswordForm input[name="email"]').value = signInEmail;
                signInForm.style.display = 'none';
                forgotPasswordSection.style.display = 'block';
                forgotPasswordLink.style.display = 'none';
            } else {
                signInForm.style.display = 'block';
                forgotPasswordSection.style.display = 'none';
                forgotPasswordLink.style.display = 'block';
            }
        }

        async function sendOTP() {
            const button = document.getElementById('sendOtpButton');
            const email = document.querySelector('#forgotPasswordForm input[name="email"]').value;
            
            button.disabled = true;
            button.style.backgroundColor = '#ccc';
            button.value = 'Sending OTP...';
            
            try {
                const response = await fetch('/forgot-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email }),
                });
                
                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('resetPasswordForm').style.display = 'block';
                    button.value = 'OTP Sent';
                    alert('OTP sent successfully to your email');
                    
                    let timeLeft = 60;
                    const timer = setInterval(() => {
                        if (timeLeft <= 0) {
                            clearInterval(timer);
                            button.disabled = false;
                            button.style.backgroundColor = 'orange';
                            button.value = 'Send OTP';
                        } else {
                            button.value = `Resend in ${timeLeft}s`;
                            timeLeft--;
                        }
                    }, 1000);
                } else {
                    alert(data.message);
                    button.disabled = false;
                    button.style.backgroundColor = 'orange';
                    button.value = 'Send OTP';
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to send OTP');
                button.disabled = false;
                button.style.backgroundColor = 'orange';
                button.value = 'Send OTP';
            }
        }

        async function resetPassword() {
            const email = document.querySelector('#forgotPasswordForm input[name="email"]').value;
            const otp = document.querySelector('#resetPasswordForm input[name="otp"]').value;
            const newPassword = document.querySelector('#resetPasswordForm input[name="newPassword"]').value;
            const confirmPassword = document.querySelector('#resetPasswordForm input[name="confirmPassword"]').value;
            
            if (newPassword !== confirmPassword) {
                alert('Passwords do not match');
                return;
            }
            
            try {
                const response = await fetch('/reset-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ email, otp, newPassword }),
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Password reset successful');
                    window.location.href = '/signin';
                } else {
                    alert(data.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Failed to reset password');
            }
        }
    </script>

