    <script>
        // Smooth loading animation when changing pages
        document.querySelectorAll('.pagination-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const rows = document.querySelectorAll('#order tbody tr');
                rows.forEach(row => {
                    row.style.opacity = '0';
                });
                setTimeout(() => {
                    window.location.href = this.href;
                }, 300);
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const monthlyData = JSON.parse('<%- JSON.stringify(monthlyData) %>');
        const ctx = document.getElementById('spendingChart').getContext('2d');
        const average = JSON.parse('<%- JSON.stringify(monthlyAverage) %>');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: monthlyData.labels,
                datasets: [
                    {
                        label: 'Monthly Spending',
                        data: monthlyData.values,
                        backgroundColor: 'rgba(255, 130, 67, 0.1)',
                        borderColor: 'rgba(255, 130, 67, 1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: 'rgba(255, 130, 67, 1)',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    },
                    {
                        label: 'Average',
                        data: Array(monthlyData.labels.length).fill(average),
                        borderColor: '#4CAF50',
                        borderWidth: 2,
                        borderDash: [5, 5],
                        fill: false,
                        pointStyle: false
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Monthly Spending Overview',
                        font: {
                            size: 16
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '₹' + value;
                            }
                        }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'index'
                }
            }
        });
    });
    </script>

    <script>
    function handleLogout(event) {
        event.preventDefault();
        fetch('/user-logout')
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    localStorage.removeItem('userName');
                    localStorage.removeItem('userEmail');
                    localStorage.removeItem('userPhone');
                    window.location.href = '/signin';
                } else {
                    console.error('Logout failed:', data.message);
                    alert('Error logging out');
                }
            })
            .catch(error => {
                console.error('Error during logout:', error);
                alert('Error logging out');
            });
    }
    </script>
