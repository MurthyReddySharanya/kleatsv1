    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const authButton = document.getElementById('authButton');
            const userName = localStorage.getItem('userName');

            if (userName) {
                // If user is logged in, change button to logout
                authButton.href = "#";
                authButton.querySelector('i').className = "uil uil-signout";
                authButton.querySelector('i').title = "Sign Out";
                
                authButton.addEventListener('click', function(e) {
                    e.preventDefault();
                    // First clear local storage
                    localStorage.removeItem('userName');
                    localStorage.removeItem('userEmail');
                    localStorage.removeItem('userPhone');
                    
                    // Then call logout endpoint
                    window.location.href = '/logout';
                });
            } else {
                // If user is not logged in, keep signup functionality
                authButton.href = "/signup";
                authButton.querySelector('i').className = "uil uil-user-plus";
                authButton.querySelector('i').title = "Sign Up";
            }
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
