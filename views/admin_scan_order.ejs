    <script>
        let scanner = new Instascan.Scanner({ video: document.getElementById('qr-video') });
        let scannerContainer = document.getElementById('scanner-container');
        let scannerOverlay = document.querySelector('.scanner-overlay');
        let cameras = [];
        let currentCamera = null;

        scanner.addListener('scan', function (content) {
            fetchOrderDetails(content);
            stopScanner();
            scannerContainer.classList.add('border-green');
        });

        function startScanner() {
            if (currentCamera) {
                scanner.start(currentCamera);
                scannerOverlay.style.display = 'none';
            }
        }

        function stopScanner() {
            scanner.stop();
            scannerOverlay.style.display = 'flex';
        }

        Instascan.Camera.getCameras().then(function (availableCameras) {
            cameras = availableCameras;
            if (cameras.length > 0) {
                // Try to find the back camera
                currentCamera = cameras.find(camera => camera.name.toLowerCase().includes('back')) || cameras[0];
                startScanner();
            } else {
                console.error('No cameras found.');
                scannerOverlay.textContent = 'No cameras found';
                scannerOverlay.style.display = 'flex';
            }
        }).catch(function (e) {
            console.error(e);
            scannerOverlay.textContent = 'Camera error';
            scannerOverlay.style.display = 'flex';
        });

        scannerContainer.addEventListener('click', function() {
            if (scanner.scanning) {
                stopScanner();
            } else {
                scannerContainer.classList.remove('border-green');
                startScanner();
            }
        });

        function fetchOrderDetails(orderId) {
            document.getElementById('order-id').textContent = `Order ID: ${orderId}`;
            document.getElementById('order-status').textContent = 'Status: Fetching...';
            document.getElementById('order-details').style.display = 'block';
            
            // Clear any existing item details
            const existingDetails = document.getElementById('item-details');
            if (existingDetails) {
                existingDetails.remove();
            }

            // Fetch order details from the server
            fetch(`/api/order-details/${orderId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Update order status
                        const status = data.orders[0].payment_status;
                        document.getElementById('order-status').textContent = `Status: ${status}`;
                        
                        // Only show item details and add status class if status is PAID
                        if (status === 'PAID') {
                            document.getElementById('order-status').classList.add('status-paid');
                            
                            // Create table for items
                            const tableHtml = `
                                <div id="item-details">
                                    <table class="order-table">
                                        <thead>
                                            <tr>
                                                <th>Item Name</th>
                                                <th>Quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            ${data.orders.map(order => `
                                                <tr>
                                                    <td>${order.item_name}</td>
                                                    <td>${order.quantity}</td>
                                                </tr>
                                            `).join('')}
                                        </tbody>
                                    </table>
                                </div>
                            `;
                            document.getElementById('order-id').insertAdjacentHTML('afterend', tableHtml);
                        }
                    } else {
                        document.getElementById('order-status').textContent = 'Status: Error fetching order details';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('order-status').textContent = 'Status: Error fetching order details';
                });

            // Add event listeners to buttons
            document.getElementById('dispatch-btn').onclick = () => updateOrderStatus(orderId, 'DISPATCHED');
            document.getElementById('refund-btn').onclick = () => updateOrderStatus(orderId, 'REFUND');
        }

        function updateOrderStatus(orderId, newStatus) {
            fetch('/process_scanned_order', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ orderId, newStatus }),
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Update the displayed status
                    document.getElementById('order-status').textContent = `Status: ${newStatus}`;
                    // Remove the paid status class if it exists
                    document.getElementById('order-status').classList.remove('status-paid');
                    // Hide the item details since it's no longer in PAID status
                    const itemDetails = document.getElementById('item-details');
                    if (itemDetails) {
                        itemDetails.remove();
                    }
                    alert('Order status updated successfully');
                } else {
                    alert('Failed to update order status: ' + (data.message || 'Unknown error'));
                }
            })
            .catch((error) => {
                console.error('Error:', error);
                alert('An error occurred while updating the order status');
            });
        }
    </script>

